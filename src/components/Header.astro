---
import AppDemo from '/AppDemo.mp4';
---

<header>
  <h1>
    <span>JavaScript</span>
    <span class='playjs'>PlayJS.</span>
  </h1>

  <video width="640px" height="360px" autoplay loop muted>
    <source src={AppDemo} type='video/mp4' />
    Sorry, your browser doesn't support embedded videos.
  </video>
</header>

<style>
  p {
    color: #fffdfa;
    font-size: 1.5rem;
    font-weight: 300;
    text-align: center;
  }
  header {
    background: linear-gradient(to bottom, #070606, #15202b);
    display: flex;
    flex-direction: row;
    place-content: center;
    padding: 4rem 0 4rem 0;
    align-items: center;
    gap: 2rem;
  }
  img {
    object-fit: contain;
  }
  h1 {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: -0.06em;
    text-align: center;
  }
  span {
    color: #fffdfa;
    display: block;
    font-size: 56px;
    line-height: 1.2;
    position: relative;
  }

  video {
    border-radius: 8px;
    max-width: 640px;
    object-fit: contain;
  }

  .playjs {
    color: #fffdfa;
    background-image: -webkit-linear-gradient(0deg, #fffdfa 42%, #f7de3a 70%);
    background-clip: text;
    -webkit-background-clip: text;
    text-fill-color: transparent;
    -webkit-text-fill-color: transparent;
  }

  @media (max-width: 940px) {
    header {
      flex-direction: column;
    }
    video {
      max-width: 400px;
    }
  }
</style>
